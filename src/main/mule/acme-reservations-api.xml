            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\reservations:application\json:acme-reservations-api-config">
        <ee:transform doc:name="Transform Message">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
